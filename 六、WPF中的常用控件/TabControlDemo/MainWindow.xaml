<Window x:Class="TabControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabControlDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="tab" SelectionChanged="tab_SelectionChanged">
            <TabItem Header="Tab item1" BorderBrush="Red" BorderThickness="1">
                <StackPanel>
                    <Label Content="请输入用户信息"/>
                    <TextBox></TextBox>
                    <Button Content="确定" HorizontalAlignment="Right" Width="88" Margin="10" Click="Button_Click"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="Tab item2">
                <Grid></Grid>
            </TabItem>
            <TabItem Header="Tab item3">
                <Grid/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
