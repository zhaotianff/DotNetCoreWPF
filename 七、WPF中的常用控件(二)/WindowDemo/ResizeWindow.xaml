<Window x:Class="WindowDemo.ResizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowDemo"
        mc:Ignorable="d"
        Title="ResizeWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="ResizeMode"></Label>
        <ComboBox Width="250" HorizontalAlignment="Left" SelectionChanged="ComboBox_SelectionChanged" Name="combox_ResizeMode">
            <ComboBoxItem>NoResize</ComboBoxItem>
            <ComboBoxItem>CanMinimize</ComboBoxItem>
            <ComboBoxItem>CanResize</ComboBoxItem>
            <ComboBoxItem>CanResizeWithGrip</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</Window>
