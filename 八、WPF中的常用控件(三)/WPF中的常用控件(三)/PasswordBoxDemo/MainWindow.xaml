<Window x:Class="PasswordBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <PasswordBox VerticalAlignment="Top" Height="30" PasswordChar="*" Name="pbox"></PasswordBox>
        <Button Content="设置密码" Click="Button_Click_1"></Button>
        <Button Content="获取密码" Click="Button_Click"></Button>
    </StackPanel>
</Window>
