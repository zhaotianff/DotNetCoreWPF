<Window x:Class="DynamicListBoxDataTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicListBoxDataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ListBox Name="listbox">
        </ListBox>

        <Button Content="代码创建数据模板" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,150,0" Click="CreateDataTemplate_Click"></Button>
        <Button Content="从外部加载创建数据模板" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Click="CreateDataTemplateFromLocalFile_Click"></Button>
    </Grid>
</Window>
