<tianxia:BlurWindow x:Class="Xmlx.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tianxia="clr-namespace:TianXiaTech;assembly=BlurWindow"
        xmlns:local="clr-namespace:Xmlx"
        mc:Ignorable="d"
        Title="{Binding XPath=Window1_Title}" Height="300" Width="300" Name="window">
    <StackPanel>
        <Label Content="{Binding XPath=Window1_Label}"></Label>
        <ComboBox Name="combox" SelectionChanged="combox_SelectionChanged">
            <ComboBoxItem>中文</ComboBoxItem>
            <ComboBoxItem>English</ComboBoxItem>
        </ComboBox>
    </StackPanel>
</tianxia:BlurWindow>
